    time.sleep(3)
    autopy.mouse.move(1194, 325)
    autopy.mouse.click()
    autopy.mouse.toggle(True)
    time.sleep(0.2)
    autopy.mouse.toggle(False)
    time.sleep(0.2)
def begin_end():
    "开始游戏到退出游戏"
    begin_shouyou_subProcess()
    open_game()
    time.sleep(5)
    open_byl()
    time.sleep(70)
    close_gongGao()
#os.system("pause")
    time.sleep(20)
    close_zhiDaole()
    "判断过十二点,关闭每周签到"
    if False:
        time.sleep(10)
        close_weekqd()
    time.sleep(10)
    open_beiLvMs()
    time.sleep(10)
    open_fangJian()
    time.sleep(10)
def shooting():
    "定点循环攻击"
    x = 1287 
    y = 637 
    n = 0
    autopy.mouse.move(x, y) 
    "时长"
    begin_time = time.time()
    #set_time = 60*60*60*1.5
    set_time = 10 
   #while n < 10:
    while True:
        autopy.mouse.click()
        autopy.mouse.toggle(True)
        time.sleep(0.1)
        autopy.mouse.toggle(False)
        time.sleep(0.1)
        "如果玩的时间超过设定值,就退出游戏,休息一段时间,重新游戏"
        end_time = time.time()
        exp_time = end_time-begin_time
        #print begin_time  
        #print end_time
        #print exp_time
        #print set_time 
        if exp_time > set_time : 
            exit_shouyou()
            #pause_time = 60*60*60*1.5
            pause_time = 30 
            time.sleep(pause_time)
            begin_end()   
begin_end()
